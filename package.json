    "dotenv": "^16.3.1",
    "esbuild": "^0.19.2",
    "express": "^4.18.2",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/supertest": "^2.0.12",
    "supertest": "^6.3.3",
    "typescript": "^5.1.6",
    "vitest": "^0.34.3"
  }
}
